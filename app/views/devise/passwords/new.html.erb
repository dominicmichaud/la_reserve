<div class="devise-forms-container">
  <div class="form-container">

    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-lg-offset-3">

          <h2><%= t('devise_forms.forgot_password.title') %></h2>

          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <%= f.input :email, label:t('devise_forms.sign_in.email'), required: true, autofocus: true %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, t('devise_forms.forgot_password.btn_text') %>
              </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>


  </div>
</div>