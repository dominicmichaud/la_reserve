<%= content_for :page_title, 'Connexion' %>

<div class="devise-forms-container">
  <div class="form-container">

    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
          <h2><%= t('devise_forms.sign_in.title') %></h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, label: t('devise_forms.sign_in.email'), required: false, autofocus: true %>
                <%= f.input :password, label: t('devise_forms.sign_in.password'), required: false %>
                <%= f.input :remember_me, label: t('devise_forms.sign_in.remember').html_safe, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, t('devise_forms.sign_in.connect_btn') %>
              </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>


  </div>
</div>


