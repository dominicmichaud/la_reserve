              <div class="container">
                <div class="row">
                  <div class="col-lg-12">
                    <div class="header-title">
                      <div class="text-container">
                        <%= image_tag 'reserve-logo', alt: '' %>
                        <h1 class="hidden-sm hidden-xs"><%=	t('homepage.slider_caption_1').html_safe  %></h1>
                        <h1 class="hidden-lg hidden-md"><%=	t('homepage.slider_caption_mobile_1').html_safe  %></h1>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </li>
