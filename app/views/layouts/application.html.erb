<footer>
  <div class="footer-wrapper">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
          <div class="footer-title">
            <h2><%=	t('footer.menu_links_text').html_safe %></h2>
          </div>
          <div class="footer-links">
            <ul class="mobile-footer-links hidden-xs">
              <li><a href="/a-propos/"><%=	t('master.top_menu.about').html_safe %></a></li>
