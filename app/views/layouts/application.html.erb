      </button>
      <a class="navbar-brand" href="/"><%= image_tag 'petro-canada-logo-stclaire', alt: 'Petro-Canada' %></a>
    </div>
    <div id="navbar" class="collapse navbar-collapse sidebar-offcanvas pull-right">
      <ul class="nav navbar-nav">
        <li class="hidden-lg hidden-md"><a href="/"><%=	t('master.top_menu.home').html_safe %></a></li>
        <li class="add-margin-right hidden-sm hidden-xs <%= params[:id] == 'a-propos' ? 'active-link' : '' %>"><a href="/a-propos/"><%=	t('master.top_menu.about').html_safe %> <span class="underline"></span></a></li>
