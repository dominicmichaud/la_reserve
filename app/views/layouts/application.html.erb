            <div class="footer-copyright-wrapper">
              <p class="pull-left"><%=	t('footer.copyright').html_safe %></p>
              <ul class="pull-right">
                <li><a href=""><%=	t('footer.confidentiality').html_safe %></a></li>
                <li><span>|</span></li>
                <li><a href=""><%=	t('footer.legal').html_safe %></a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="copyright-text">
            <p><%=	t('footer.rights').html_safe %></p>
          </div>
        </div>
      </div>
    </div>
