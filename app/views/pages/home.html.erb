<%= content_for :page_title, 'Accueil' %>

<section id="slippry-slider" class="full-width">
  <div class="sy-box front-page">
    <div class="sy-slides-wrap">
      <div class="sy-slides-crop">
        <ul id="slippry-demo" class="sy-list">
          <li class="sy-slide fade useCSS sy-active" style="transition-duration: 800ms; opacity: 1;">
            <%= image_tag 'slide1', alt: '' %>
            <div class="inner-container">
              <div class="container">
                <div class="row">
                  <div class="col-lg-12">
                    <div class="header-title">
                      <div class="text-container hidden-xs">
                        <%= image_tag 'reserve-logo', alt: '' %>
                        <h1>découvrez <span>ici</span> notre<br/>grande variété de bières<br/>de microbrasserie</h1>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </li>
          <li class="sy-slide fade useCSS" style="transition-duration: 800ms; opacity: 0;">
            <img src="http://placehold.it/1920x682">
          </li>
          <li class="sy-slide fade useCSS" style="transition-duration: 800ms; opacity: 0;">
            <%= image_tag 'slide3', alt: '' %>
