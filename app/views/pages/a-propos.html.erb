<%= content_for :page_title, 'À propos' %>

<section id="page_header" class="header-about">
  <%= image_tag 'about-header', alt: 'À propos', class: 'mobile-landscape-header header-img' %>
  <%= image_tag 'mobile-about-header', alt: 'À propos', class: 'mobile-potrait-header header-img' %>

  <div class="inner-container">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="header-title">
            <div class="text-container">
              <h1><%=	t('about.header_title') %></h1>
              <p>
                <%=	t('about.header_subtext') %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="main-content">
  <div class="about-container">
    <div class="container-fluid fluid-container-limit">
      <!--SECTION COMPANY------------------------------------------------------------------------------------------------------>
      <div id="company" class="custom-section company-section">
        <div class="text-container text-to-right">
          <div class="text-wrapper">
            <h2><%=	t('about.company.title') %></h2>
            <p>
              <%=	t('about.company.subtext').html_safe %>
            </p>
          </div>
        </div>
      </div>
      <!--SECTION PETROPOINTS------------------------------------------------------------------------------------------------------>
      <div id="petro-points" class="custom-section card-section">
        <div class="text-container text-to-left">
          <div class="text-wrapper">
            <h2><%=	t('about.petro_points.title') %></h2>
            <p>
              <%=	t('about.petro_points.subtext_1').html_safe %>
